<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="NewTarget" BeforeTargets="Build">
		<PropertyGroup>
			<!-- custom output folder for sql types generated by SqlConstantsGenerator -->
			<SqlConstantsGenerator.TargetFolder>$(ProjectDir)..\DbMigrations\$(ProjectName)\</SqlConstantsGenerator.TargetFolder>
			<!-- custom type pre-create code -->
			<SqlConstantsGenerator.TypePreCreateCode>
<![CDATA[
if type_id(N'[$typename$]') is not null drop type [$typename$]
go
]]>
			</SqlConstantsGenerator.TypePreCreateCode>

			<!-- custom type post-create code -->
			<SqlConstantsGenerator.TypePostCreateCode>
<![CDATA[
print '$typename$ type re-created'
]]>
			</SqlConstantsGenerator.TypePostCreateCode>
		</PropertyGroup>
	</Target>
</Project>
