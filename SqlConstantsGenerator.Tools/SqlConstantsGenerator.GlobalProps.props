<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="NewTarget" BeforeTargets="Build">
		<PropertyGroup>
			<!-- custom output folder for sql types generated by SqlConstantsGenerator -->
			<SqlConstantsGenerator.TargetFolder>$(ProjectDir)..\DbConstants\$(ProjectName)\</SqlConstantsGenerator.TargetFolder>
			<!-- custom type pre-create code -->
			<SqlConstantsGenerator.TypePreCreateCode>
<![CDATA[
if object_id(N'[$viewname$]') is not null drop view [$viewname$]
go
]]>
			</SqlConstantsGenerator.TypePreCreateCode>

			<!-- custom type post-create code -->
			<SqlConstantsGenerator.TypePostCreateCode>
<![CDATA[
print '[$viewname$] is re-created'
]]>
			</SqlConstantsGenerator.TypePostCreateCode>
		</PropertyGroup>
	</Target>
</Project>
