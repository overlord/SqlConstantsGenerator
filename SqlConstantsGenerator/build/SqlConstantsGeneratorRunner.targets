<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<UsingTask
		TaskName="SqlConstantsGenerator.SqlGeneratorTask"
		AssemblyFile="$(TargetDir)SqlConstantsGenerator.dll"
	/>
	<Target Name="SqlConstantsGeneratorTask">
		<SqlGeneratorTask
			SourceAssemblyPath="$(SourceAssemblyPath)"
			DestinationFolder="$(DestinationFolder)"
			EncodedTypePreCreateCode="$(EncodedTypePreCreateCode)"
			EncodedTypePostCreateCode="$(EncodedTypePostCreateCode)"
		/>
	</Target>
</Project>
